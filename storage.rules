rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /cover_images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth.uid == userId;
    }
    match /profile_images/{userId} {
    	allow read;
      allow write: if userId == request.auth.uid + '.jpg';
    }
    match /post_images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth.uid == userId;
    }
  }
}
